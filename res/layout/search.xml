<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/status_bar_background" 
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="horizontal"
    	android:background="@drawable/panel_picture_frame_bg_focus_blue"
	    >
	    <ImageView 
	        android:layout_width="wrap_content"
	    	android:layout_height="fill_parent"
	    	android:src="@drawable/bus"
	    	/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:text="@string/title_search"
	        android:textColor="#FFFFFF"
	        android:textSize="40dip" />

	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="6"
	    android:orientation="vertical" >
	    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="2"
			android:orientation="vertical" >
		   	<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:orientation="horizontal" >
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:background="@drawable/start" />
		   		<AutoCompleteTextView
		   		    android:id="@+id/edittext_start"
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="6" />
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:background="@drawable/list" />
		   	</LinearLayout>
		   	<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:orientation="horizontal" >
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"/>
		   		<Spinner
		   		    android:id="@+id/spinner_start"
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="6" />
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"/>
		   	</LinearLayout>
		   	<!-- Destination -->
		   	<LinearLayout
		   		android:layout_width="fill_parent"
		   		android:layout_height="40dip"
		   		android:orientation="horizontal" >

		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:background="@drawable/stop" />

		   		<AutoCompleteTextView
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="6" 
		   		    android:id="@+id/edittext_end"/>
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:background="@drawable/list" />
		   	</LinearLayout>
		   	 	<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:orientation="horizontal" >
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"/>
		   		<Spinner
		   		    android:id="@+id/spinner_end"
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="6" />
		   		<Button
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"/>
		   	</LinearLayout>
		   	<LinearLayout
		   		android:layout_width="fill_parent"
		   		android:layout_height="40dip"
		   		android:orientation="horizontal" >

		   		<ImageView
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:scaleType="center"
		   		    android:src="@drawable/ic_time" />

		   		<DigitalClock
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="5"
		   		    android:gravity="center"
		   		    android:textColor="#FF000000"
		   		    android:textSize="@dimen/text_size_h5" />

		   		<ImageView
		   		    android:layout_width="0dip"
		   		    android:layout_height="fill_parent"
		   		    android:layout_weight="1"
		   		    android:scaleType="center"
		   		    android:src="@drawable/arrow_right_blue_round" />
		   	</LinearLayout>
	    </LinearLayout>
	    <ScrollView
		   	android:layout_width="fill_parent"
		   	android:layout_height="0dip"
		   	android:layout_weight="1"
		   	android:orientation="vertical" >

		   	<LinearLayout
		   		android:layout_width="fill_parent"
		   		android:layout_height="fill_parent"
		   		android:orientation="vertical" >

		   		<LinearLayout
		   		    android:layout_width="fill_parent"
		   		    android:layout_height="40dip"
		   		    android:orientation="horizontal" >

		   		    <ImageView
		   		        android:layout_width="0dip"
		   		        android:layout_height="fill_parent"
		   		        android:layout_weight="1"
		   		        android:scaleType="center"
		   		        android:src="@android:drawable/ic_input_add" />

		   		    <TextView
		   		        android:layout_width="0dip"
		   		        android:layout_height="fill_parent"
		   		        android:layout_weight="6"
		   		        android:gravity="center"
		   		        android:text="@string/text_ngangqua"
		   		        android:textColor="#FF000000"
		   		        android:textSize="@dimen/text_size_h6" />

		   		    <ImageView
		   		        android:layout_width="0dip"
		   		        android:layout_height="fill_parent"
		   		        android:layout_weight="1"
		   		        android:scaleType="center"
		   		        android:src="@drawable/arrow_right_blue_round" />
		   		</LinearLayout>
		   	</LinearLayout>
	    </ScrollView>
    </LinearLayout>

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="horizontal" >

	    <Button
		   	android:id="@+id/btn_search"
		   	android:layout_width="fill_parent"
		   	android:layout_height="fill_parent"
		   	android:text="@string/btn_search"
		   	android:textColor="#FFFFFF"
		   	android:textSize="20dip" />
    </LinearLayout>

</LinearLayout>